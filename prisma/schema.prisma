// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Question {
  id     Int      @id @default(autoincrement())
  Answer Answer[]
  createdAt DateTime
}

model Answer {
  id         Int      @id @default(autoincrement())
  question   Question @relation(fields: [questionId], references: [id])
  answer     String
  email      String
  questionId Int
  createdAt DateTime
}
